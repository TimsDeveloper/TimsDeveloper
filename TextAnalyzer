import java.io.File;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.util.*;

public class MiniTextAnalyzer {

	public static void main(String[] args) throws IOException {
		
		Path path = Paths.get("/Users/aznso/OneDrive/Documents/TheRaven.txt");
		Scanner scanner = new Scanner(path);
		
       /** while(scanner.hasNextLine()){
            //process each line
            String line = scanner.nextLine();
            System.out.println(line);
        }*/
		
        Map<String,Integer> map = new HashMap<String, Integer>(); 
        while (scanner.hasNextLine())
        {
            String val = scanner.nextLine(); 
            if(map.containsKey(val) == false) 
                map.put(val,1);
            else 
            {
                int count = (int)(map.get(val)); 
                map.remove(val);  
                map.put(val,count+1); 
            }
        }
        
        Set<Map.Entry<String, Integer>> set = map.entrySet(); 
        List<Map.Entry<String, Integer>> sortedList = new ArrayList<Map.Entry<String, Integer>>(set); 
        
        Collections.sort( sortedList, new Comparator<Map.Entry<String, Integer>>() 
        {
            public int compare( Map.Entry<String, Integer> a, Map.Entry<String, Integer> b ) 
            {
                return (b.getValue()).compareTo( a.getValue() ); 
//                return (a.getValue()).compareTo( b.getValue() ); 
            }
        } );
        
        for(Map.Entry<String, Integer> i:sortedList){
            System.out.println(i.getKey()+" , "+i.getValue());
            
        
		scanner.close();

        }

	}
}
